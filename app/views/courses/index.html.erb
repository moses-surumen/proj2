<% if user_signed_in? %>
  <p id="intro">
    Hello
    <%= current_user.name %>
    <br/>
    <span>
      Start learning with others today.
    </span>
  </p>
<% else %>
  <p id="intro">
    Interested in this thing?
    <br/>
    <span>
      Start learning with others today..
    </span>
  </p>
<% end %>
<div id="posts">
  <% @courses.each do |course| %>
    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag course.image.url(:small)), course %>
      </div>
      <div class="post_content">
        <div class="title">
          <h2>
            <%= link_to course.title, course %>
          </h2>
        </div>
        <div class="data clearfix">
          <p class="username">
            Taught by
            <%= course.user.name %>
          </p>
          <p class="buttons">
            <span>
              <i class="fa fa-comments-o"></i>
              <%= course.comments.count %>
            </span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>


